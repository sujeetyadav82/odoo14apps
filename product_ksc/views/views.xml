<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="product_search" model="ir.ui.view">
        <field name="name">product.search</field>
        <field name="model">product.ksc</field>
        <field name="arch" type="xml">
            <search>
                <field name="product_name" string="Product name" filter_domain="[('product_name','ilike',self)]"/>
                <field name="sku_product" string="SKU" filter_domain="[('sku_product','ilike',self)]"/>
                <field name="barcode" string="Barcode" filter_domain="[('barcode','ilike',self)]"/>
                <filter name="can_this_product_be_sold" string="Soldable"
                        domain="[('can_this_product_be_sold','=','True')]"/>
                <filter name="can_this_product_be_sold" string="Unsoldable"
                        domain="[('can_this_product_be_sold','!=','True')]"/>

                <field name="product_type" string="State name" filter_domain="[('product_type','ilike',self)]"/>
            </search>
        </field>
    </record>
    <record id="product_form" model="ir.ui.view">
        <field name="name">product.ksc.form</field>
        <field name="model">product.ksc</field>
        <field name="arch" type="xml">
            <form>
                <button name="stock_update1" type="object" string="Update Stock through object"
                        class="btn-primary"/>
                <button name="stock_warehouse.stock_update1_action" type="action"
                        string="Update product stock through action "
                        class="btn-primary ml4"/>
                <sheet>
                    <div>
                        <h1  style="color:blue">Sujeet</h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_name"/>
                            <field name="sku_product"/>
                            <field name="barcode"/>
                            <field name="can_this_product_be_sold"/>
                        </group>
                    </group>
                      <div>
                        <h1 style="color:red">Amit</h1>
                        </div>
                    <group>
                        <group>
                            <field name="product_type" widget="radio"/>
                            <field name="sale_price"/>
                            <field name="cost_price"/>
                            <field name="unit_price"/>
                        </group>
                        <group>
                            <field name="active_product"/>
                            <field name="warehouse"/>
                            <field name="product_image"/>
                        </group>
                        <group>
                            <field name="website_desc"/>
                            <field name="note"/>
                            <field name="product_stock"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Accounting">
                            <div class="oe_title">
                                <h1>
                                    <label for="tax_ids" string="Customer Taxes"/>
                                    <field name="tax_ids" widget="many2many_tags" />
                                </h1>
                            </div>

                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="product_ksc.list">
        <field name="name">product_ksc list</field>
        <field name="model">product.ksc</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_name"/>
                <field name="sku_product"/>
                <field name="barcode"/>
                <field name="product_type"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="product_ksc.action_window">
        <field name="name">Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.ksc</field>
        <field name="view_mode">tree,form,search</field>
    </record>
    <menuitem name="Products" id="product_ksc.menu_root" sequence="10"/>
    <menuitem name="My Sales" id="product_ksc.menu_1" parent="product_ksc.menu_root" sequence="10"/>
    <menuitem name="Products" id="product_root" parent="product_ksc.menu_1" action="product_ksc.action_window"
              sequence="10"/>
</odoo>